{
  "version": 0,
  "name": "Virtual Kettle",
  "description": "A kettle using virtual heater and temperature probe. Can be used for testing or demo purposes.",
  "control": {
    "type": "Hysteresis",
    "parameters": {
      "target": 75,
      "delta": 5
    }
  },
  "inputs": [
    {
      "type": "temperatureProbe",
      "path": "virtual/VirtualTemperatureProbe",
      "name": "Kettle",
      "address": "virtual-temperature-probe"
    }
  ],
  "outputs": [
    {
      "type": "heatingElement",
      "path": "virtual/VirtualHeatingElement",
      "gpio": "18"
    }
  ],
  "shutoff": {
    "type": "manual"
  }
}